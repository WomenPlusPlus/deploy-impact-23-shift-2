{
    "root": true,
    "ignorePatterns": ["**/*"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "extends": ["plugin:import/recommended", "plugin:import/typescript"],
            "rules": {
                "no-duplicate-imports": ["error"],
                "import/no-unresolved": [0],
                "no-console": ["error", { "allow": ["warn", "error"] }],
                "@typescript-eslint/no-unused-vars": [
                    "error",
                    {
                        "vars": "all",
                        "args": "after-used",
                        "ignoreRestSiblings": true
                    }
                ]
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "extends": ["plugin:import/recommended", "plugin:import/typescript"],
            "rules": {
                "no-duplicate-imports": ["error"],
                "import/no-unresolved": [0]
            }
        },
        {
            "files": ["*.js", "*.jsx"],
            "extends": ["plugin:import/recommended", "plugin:import/typescript"],
            "rules": {
                "no-duplicate-imports": ["error"],
                "import/no-unresolved": [0]
            }
        }
    ],
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
